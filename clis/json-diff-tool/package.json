{
  "name": "json-diff-tool",
  "version": "1.0.0",
  "description": "A command-line tool for comparing JSON, JSONC, and JSON5 files",
  "main": "dist/index.js",
  "bin": {
    "json-diff": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "json",
    "jsonc",
    "json5",
    "diff",
    "compare",
    "cli"
  ],
  "author": "mudssky",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.3",
    "commander": "^14.0.2",
    "js-yaml": "^4.1.1",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
