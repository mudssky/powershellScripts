{
  "name": "json-diff-tool",
  "version": "1.0.0",
  "description": "A command-line tool for comparing JSON, JSONC, and JSON5 files",
  "main": "dist/index.js",
  "bin": {
    "json-diff": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:fast": "vitest run",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc -p tsconfig.tests.json --noEmit",
    "typecheck:fast": "tsgo --noEmit && tsgo -p tsconfig.tests.json --noEmit",
    "biome": "biome check --apply ./src",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "biome:fixAll": "pnpm run check:fix",
    "biome:check": "pnpm run check",
    "biome:ci": "biome ci .",
    "qa": "pnpm run typecheck:fast && pnpm run check && pnpm run test:fast"
  },
  "keywords": [
    "json",
    "jsonc",
    "json5",
    "diff",
    "compare",
    "cli"
  ],
  "author": "mudssky",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.3",
    "commander": "^14.0.3",
    "js-yaml": "^4.1.1",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
